---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import Timeline from "../components/Timeline.astro";

const timelineItems = [
    {
        date: "Oct 2025",
        category: "course",
        title: "Started Advanced Backend Development (boot.dev)",
        description:
            "Enrolled in comprehensive backend engineering track covering Go, system design, and distributed systems.",
        tags: ["Go", "Backend", "Learning"],
        // No detailUrl - quick reference only
    },
    {
        date: "Aug 2025",
        category: "trip",
        title: "Japan STEM Innovation Trip",
        description:
            "Week-long immersive experience exploring robotics labs, tech startups, and innovation centers in Tokyo and Osaka.",
        highlights: [
            "Visited Sony AI Research Lab",
            "Attended workshop at TeamLab Borderless",
            "Collaborated with local students on IoT project",
        ],
        tags: ["Japan", "Robotics", "Innovation"],
        detailUrl: "/timeline/japan-stem-trip",
    },
    {
        date: "Mar 2025",
        category: "competition",
        title: "National Cyber League - Spring 2025",
        description:
            "Competed in comprehensive cybersecurity challenges, achieving Top 10% nationally.",
        highlights: [
            "Ranked Top 10% out of 5,000+ participants",
            "Specialized in cryptography and web exploitation",
            "Solved 45+ security challenges",
        ],
        tags: ["Cybersecurity", "Top 10%", "NCL"],
        detailUrl: "/timeline/ncl-spring-2025",
    },
    {
        date: "Jan 2025",
        category: "achievement",
        title: "AWS Solutions Architect Certification",
        description:
            "Earned AWS Certified Solutions Architect - Associate certification, demonstrating cloud architecture proficiency.",
        tags: ["AWS", "Cloud", "Certification"],
    },
    {
        date: "Nov 2024",
        category: "project",
        title: "Built Microservices Platform for School Management",
        description:
            "Led development of a distributed system for school event management using Kubernetes and Docker.",
        highlights: [
            "Deployed on 3-node Kubernetes cluster",
            "Served 500+ concurrent users",
            "Implemented CI/CD with GitLab",
        ],
        tags: ["Kubernetes", "Microservices", "Leadership"],
        detailUrl: "/timeline/school-management-platform",
    },
    {
        date: "Sep 2024",
        category: "activity",
        title: "Founded School DevOps Club",
        description:
            "Started a club to teach students about DevOps practices, cloud computing, and infrastructure automation.",
        highlights: [
            "30+ active members",
            "Weekly workshops on Docker, K8s, CI/CD",
            "Organized cloud computing hackathon",
        ],
        tags: ["Leadership", "Teaching", "DevOps"],
    },
    {
        date: "Jun 2024",
        category: "trip",
        title: "Google Singapore Office Visit",
        description:
            "Selected for exclusive tour of Google Singapore, attended talks on SRE practices and cloud infrastructure.",
        tags: ["Google", "SRE", "Networking"],
        detailUrl: "/timeline/google-singapore-visit",
    },
    {
        date: "Feb 2024",
        category: "competition",
        title: "AWS GameDay Competition",
        description:
            "Participated in AWS GameDay, troubleshooting and optimizing cloud infrastructure under time pressure.",
        highlights: [
            "Team placed 3rd out of 20 teams",
            "Optimized costs by 40%",
            "Improved system resilience",
        ],
        tags: ["AWS", "Competition", "Team"],
    },
    {
        date: "2024 - Present",
        category: "activity",
        title: "Computer Science at SST",
        description:
            "Pursuing Computer Science specialization, focusing on software engineering and cloud computing.",
        tags: ["SST", "CS", "Singapore"],
    },
];
---

<!doctype html>
<html>
    <Header title="Adam Lee" />
    <body>
        <div class="content">
            <Sidebar selectedItem="home" />
            <nav class="main">
                <div class="container">
                    <main class="fold-content-container">
                        <div class="fold-content">
                            <h1>
                                Hi, I'm Adam.<br />I'm an aspiring engineer.
                            </h1>
                            <p class="lead">
                                Student from the School of Science and
                                Technology, Singapore. Experienced backend
                                developer and cloud architect. A proactive team
                                member dedicated to continuous learning,
                                problem-solving, and aiding teammates in
                                achieving quicker outcomes.
                            </p>
                        </div>

                        <!-- Timeline Section -->
                        <Timeline items={timelineItems} />

                        <div class="projects-section">
                            <!-- Software Development -->
                            <a
                                href="/software-development"
                                class="projects-container"
                            >
                                <div class="single-projects-category">
                                    <div
                                        class="projects-category-image-container"
                                    >
                                        <img
                                            src="./assets/browser.svg"
                                            loading="lazy"
                                            alt=""
                                            class="projects-category-image"
                                        />
                                    </div>
                                </div>
                                <div class="single-projects-content">
                                    <h4>Software Development</h4>
                                    <div class="tech-tools-container">
                                        <div
                                            class="mini-label-white gray-color"
                                        >
                                            Technologies &amp; tools
                                        </div>
                                        <div
                                            class="chips-container chips-container-small-width"
                                        >
                                            <div class="single-chip small-chip">
                                                React
                                            </div>
                                            <div class="single-chip small-chip">
                                                Next.js
                                            </div>
                                            <div class="single-chip small-chip">
                                                Node.js
                                            </div>
                                            <div class="single-chip small-chip">
                                                MongoDB
                                            </div>
                                            <div class="single-chip small-chip">
                                                Heroku
                                            </div>
                                            <div class="single-chip small-chip">
                                                RabbitMQ
                                            </div>
                                            <div class="single-chip small-chip">
                                                Express.js
                                            </div>
                                            <div class="single-chip small-chip">
                                                TypeScript
                                            </div>
                                            <div class="single-chip small-chip">
                                                NestJS
                                            </div>
                                            <div class="single-chip small-chip">
                                                Angular
                                            </div>
                                            <div class="single-chip small-chip">
                                                Postgres
                                            </div>
                                            <div class="single-chip small-chip">
                                                Linode
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <!-- DevOps & Cloud -->
                            <a href="/devops" class="projects-container">
                                <div class="single-projects-category">
                                    <div
                                        class="projects-category-image-container devops-img"
                                    >
                                        <img
                                            src="./assets/database.svg"
                                            loading="lazy"
                                            alt=""
                                            class="projects-category-image"
                                        />
                                    </div>
                                </div>
                                <div class="single-projects-content">
                                    <h4>DevOps &amp;&nbsp;Cloud</h4>
                                    <div class="tech-tools-container">
                                        <div
                                            class="mini-label-white gray-color"
                                        >
                                            Technologies &amp; tools
                                        </div>
                                        <div
                                            class="chips-container chips-container-small-width"
                                        >
                                            <div class="single-chip small-chip">
                                                Terraform
                                            </div>
                                            <div class="single-chip small-chip">
                                                Azure
                                            </div>
                                            <div class="single-chip small-chip">
                                                AWS
                                            </div>
                                            <div class="single-chip small-chip">
                                                Docker
                                            </div>
                                            <div class="single-chip small-chip">
                                                Kubernetes
                                            </div>
                                            <div class="single-chip small-chip">
                                                GitLab CI/CD
                                            </div>
                                            <div class="single-chip small-chip">
                                                RKE
                                            </div>
                                            <div class="single-chip small-chip">
                                                Node.js
                                            </div>
                                            <div class="single-chip small-chip">
                                                RabbitMQ
                                            </div>
                                            <div class="single-chip small-chip">
                                                Linux
                                            </div>
                                            <div class="single-chip small-chip">
                                                Bash
                                            </div>
                                            <div class="single-chip small-chip">
                                                Grafana
                                            </div>
                                            <div class="single-chip small-chip">
                                                Prometheus
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </main>
                </div>
            </nav>

            <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
        </div>
    </body>
</html>
