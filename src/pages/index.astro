---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import Timeline from "../components/Timeline.astro";
import CurrentlyLearning from "../components/CurrentlyLearning.astro";
import Stats from "../components/Stats.astro";
import timelineItems from "../data/timeline.json";
import currentlyLearning from "../data/learning.json";
import stats from "../data/stats.json";
---

<!doctype html>
<html lang="en">
    <Header title="Adam Lee - Engineering+ Student @ SST" />
    <body>
        <div class="content">
            <Sidebar selectedItem="home" />
            <nav class="main">
                <div class="container">
                    <main class="fold-content-container">
                        <div class="fold-content">
                            <h1>
                                Hi, I'm Adam.<br />I build things.
                            </h1>
                            <p class="lead">
                                <strong>Engineering+ student</strong> at School of
                                Science and Technology, Singapore, taking both <strong
                                    >Computing+</strong
                                > and <strong>Electronics</strong>. Part of the <strong
                                    >IDP (Integrated Diploma Programme)</strong
                                > cohort with a direct pathway to Ngee Ann Polytechnic.
                            </p>
                            <p class="sub-lead">
                                I'm passionate about <strong
                                    >backend engineering</strong
                                > and <strong>embedded systems</strong>,
                                bridging the gap between software and hardware.
                                Whether it's deploying microservices on
                                Kubernetes or programming microcontrollers. I
                                love working with all things tech.
                            </p>
                            <div class="program-badges">
                                <div class="badge">
                                    <svg
                                        class="badge-icon"
                                        width="28"
                                        height="28"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="#4a9eff"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <polygon
                                            points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"
                                        ></polygon>
                                    </svg>
                                    <div class="badge-text">
                                        <div class="badge-title">
                                            Engineering+
                                        </div>
                                        <div class="badge-subtitle">
                                            Computing & Electronics
                                        </div>
                                    </div>
                                </div>
                                <div class="badge">
                                    <svg
                                        class="badge-icon"
                                        width="28"
                                        height="28"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="#4a9eff"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <path d="M22 10v6M2 10l10-5 10 5-10 5z"
                                        ></path>
                                        <path d="M6 12v5c3 3 9 3 12 0v-5"
                                        ></path>
                                    </svg>
                                    <div class="badge-text">
                                        <div class="badge-title">
                                            3rd IDP Cohort
                                        </div>
                                        <div class="badge-subtitle">
                                            SST to Ngee Ann Poly
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="cta-buttons">
                                <a
                                    href="mailto:useradamlee@users.noreply.github.com"
                                    class="button primary-button"
                                    >Get in Touch</a
                                >
                                <a
                                    href="https://github.com/useradamlee"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="button secondary-button"
                                >
                                    <img
                                        src="/assets/github-icon.svg"
                                        alt="GitHub"
                                        class="button-icon"
                                    />
                                    View GitHub
                                </a>
                            </div>
                        </div>

                        <Stats stats={stats} />
                        <CurrentlyLearning items={currentlyLearning} />
                        <Timeline items={timelineItems} />

                        <!-- Your existing projects section -->
                    </main>
                </div>
            </nav>
        </div>
    </body>
</html>

<style>
    .sub-lead {
        font-size: 1rem;
        color: #aaa;
        line-height: 1.6;
        margin-top: 1rem;
        max-width: 700px;
    }

    .lead strong,
    .sub-lead strong {
        color: #4a9eff;
        font-weight: 600;
    }

    .program-badges {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
        flex-wrap: wrap;
    }

    .badge {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1.25rem;
        background: rgba(74, 158, 255, 0.1);
        border: 1px solid rgba(74, 158, 255, 0.3);
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .badge:hover {
        background: rgba(74, 158, 255, 0.15);
        border-color: rgba(74, 158, 255, 0.5);
        transform: translateY(-2px);
    }

    .badge-icon {
        flex-shrink: 0;
        display: block;
    }

    .badge-text {
        display: flex;
        flex-direction: column;
    }

    .badge-title {
        font-size: 0.95rem;
        font-weight: 600;
        color: #fff;
        line-height: 1.3;
    }

    .badge-subtitle {
        font-size: 0.8rem;
        color: #888;
        margin-top: 0.15rem;
        line-height: 1.2;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.875rem 1.75rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

    .primary-button {
        background: #4a9eff;
        color: #fff;
        border: 2px solid #4a9eff;
    }

    .primary-button:hover {
        background: #3a8eef;
        border-color: #3a8eef;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(74, 158, 255, 0.3);
    }

    .secondary-button {
        background: transparent;
        color: #fff;
        border: 2px solid rgba(255, 255, 255, 0.2);
    }

    .secondary-button:hover {
        border-color: #fff;
        background: rgba(255, 255, 255, 0.05);
    }

    .button-icon {
        width: 20px;
        height: 20px;
    }

    @media (max-width: 768px) {
        .program-badges {
            flex-direction: column;
        }

        .badge {
            width: 100%;
        }

        .cta-buttons {
            flex-direction: column;
        }

        .button {
            justify-content: center;
            width: 100%;
        }
    }
</style>
