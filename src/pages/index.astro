<style>
    .sub-lead {
        font-size: 1rem;
        color: #aaa;
        line-height: 1.6;
        margin-top: 1rem;
        max-width: 700px;
    }

    .lead strong,
    .sub-lead strong {
        color: #4a9eff;
        font-weight: 600;
    }

    .program-badges {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
        flex-wrap: wrap;
    }

    .badge {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1.25rem;
        background: rgba(74, 158, 255, 0.1);
        border: 1px solid rgba(74, 158, 255, 0.3);
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .badge:hover {
        background: rgba(74, 158, 255, 0.15);
        border-color: rgba(74, 158, 255, 0.5);
        transform: translateY(-2px);
    }

    .badge-icon {
        flex-shrink: 0;
        display: block;
    }

    .badge-text {
        display: flex;
        flex-direction: column;
    }

    .badge-title {
        font-size: 0.95rem;
        font-weight: 600;
        color: #fff;
        line-height: 1.3;
    }

    .badge-subtitle {
        font-size: 0.8rem;
        color: #888;
        margin-top: 0.15rem;
        line-height: 1.2;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.875rem 1.75rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

    .primary-button {
        background: #4a9eff;
        color: #fff;
        border: 2px solid #4a9eff;
    }

    .primary-button:hover {
        background: #3a8eef;
        border-color: #3a8eef;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(74, 158, 255, 0.3);
    }

    .secondary-button {
        background: transparent;
        color: #fff;
        border: 2px solid rgba(255, 255, 255, 0.2);
    }

    .secondary-button:hover {
        border-color: #fff;
        background: rgba(255, 255, 255, 0.05);
    }

    .button-icon {
        width: 20px;
        height: 20px;
    }

    @media (max-width: 768px) {
        .program-badges {
            flex-direction: column;
        }

        .badge {
            width: 100%;
        }

        .cta-buttons {
            flex-direction: column;
        }

        .button {
            justify-content: center;
            width: 100%;
        }
    }
</style>
