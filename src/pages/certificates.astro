---
import Header from "../components/Header.astro";
import CertificateGroup from "../components/CertificateGroup.astro";
import Certificate from "../components/Certificate.astro";
import Sidebar from "../components/Sidebar.astro";

const courseCertificates = {
    "boot.dev": {
        icon: "/assets/icons/bootdev.png",
        certificates: [
            {
                title: "Learn Python",
                date: "2024-10",
                pdfUrl: "/certificates/courses/bootdev-python.pdf",
                courseUrl: "https://www.boot.dev/courses/learn-python",
            },
            {
                title: "Learn Go",
                date: "2024-09",
                pdfUrl: "/certificates/courses/bootdev-go.pdf",
                courseUrl: "https://www.boot.dev/courses/learn-go",
            },
            {
                title: "Learn JavaScript",
                date: "2024-08",
                pdfUrl: "/certificates/courses/bootdev-javascript.pdf",
                courseUrl: "https://www.boot.dev/courses/learn-javascript",
            },
            // Add all your boot.dev certificates here
        ],
    },
    AWS: {
        icon: "/assets/icons/aws.svg",
        certificates: [
            {
                title: "Solutions Architect Associate",
                date: "2024-06",
                pdfUrl: "/certificates/courses/aws-solutions-architect.pdf",
                courseUrl:
                    "https://aws.amazon.com/certification/certified-solutions-architect-associate/",
            },
        ],
    },
    "Other Courses": {
        icon: "/assets/icons/courses.svg",
        certificates: [
            {
                title: "Kubernetes Administrator (CKA)",
                issuer: "CNCF",
                date: "2023-12",
                pdfUrl: "/certificates/courses/cka-certificate.pdf",
                courseUrl: "https://www.cncf.io/certification/cka/",
            },
        ],
    },
};

const competitionCertificates = [
    {
        title: "National Cyber League - Spring 2024",
        issuer: "NCL",
        date: "2024-03",
        placement: "Top 10%",
        pdfUrl: "/certificates/competitions/ncl-spring-2024.pdf",
        courseUrl: "https://nationalcyberleague.org/",
    },
    // Add more competition certificates here
];
---

<!doctype html>
<html>
    <Header title="Certificates | Sam Bernstein" />
    <body>
        <div class="content">
            <Sidebar selectedItem="certificates" />
            <nav class="main">
                <div class="container">
                    <div class="back-nav-container">
                        <a href="/" class="back-nav-button w-inline-block">
                            <img
                                src="/assets/back.svg"
                                loading="lazy"
                                alt=""
                                class="back-nav-img"
                            />
                            <div>Back</div>
                        </a>
                    </div>
                    <div class="content-container">
                        <h1>Certificates</h1>

                        <!-- Course Certificates Section -->
                        <section class="items-container">
                            <h2 class="section-title">Course Certifications</h2>
                            <div class="certificate-groups">
                                {
                                    Object.entries(courseCertificates).map(
                                        ([provider, data]) => (
                                            <CertificateGroup
                                                provider={provider}
                                                certificates={data.certificates}
                                                icon={data.icon}
                                            />
                                        ),
                                    )
                                }
                            </div>
                        </section>

                        <!-- Competition Certificates Section -->
                        <section class="items-container">
                            <h2 class="section-title">Competition Awards</h2>
                            <div class="resouce-items">
                                {
                                    competitionCertificates.map((cert) => (
                                        <Certificate
                                            title={cert.title}
                                            issuer={cert.issuer}
                                            date={cert.date}
                                            placement={cert.placement}
                                            pdfUrl={cert.pdfUrl}
                                            courseUrl={cert.courseUrl}
                                        />
                                    ))
                                }
                            </div>
                        </section>
                    </div>
                </div>
            </nav>
        </div>

        <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
    </body>
</html>

<style>
    .section-title {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.5rem;
        font-weight: 600;
        color: #ffffff;
        opacity: 0.95;
    }

    .items-container:first-of-type .section-title {
        margin-top: 0;
    }

    .certificate-groups {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
</style>
