---
const { provider, certificates, icon } = Astro.props;
const groupId = provider.toLowerCase().replace(/\s+/g, "-");
---

<details class="certificate-group" open={provider === "boot.dev"}>
    <summary class="group-header">
        <div class="group-title-container">
            {
                icon && (
                    <div class="provider-icon">
                        <img src={icon} alt={provider} />
                    </div>
                )
            }
            <h3 class="provider-name">{provider}</h3>
            <span class="cert-count"
                >{certificates.length} certificate{
                    certificates.length !== 1 ? "s" : ""
                }</span
            >
        </div>
        <svg
            class="chevron"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
        >
            <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
    </summary>

    <div class="certificates-list">
        {
            certificates.map((cert) => (
                <div class="certificate-item">
                    <div class="cert-info">
                        <h4 class="cert-title">{cert.title}</h4>
                        <div class="cert-meta">
                            {cert.issuer && (
                                <span class="issuer">{cert.issuer}</span>
                            )}
                            <span class="date">{cert.date}</span>
                        </div>
                    </div>
                    <div class="cert-actions">
                        {cert.courseUrl && (
                            <a
                                href={cert.courseUrl}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="info-btn"
                                title="Course Details"
                            >
                                <svg
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <circle cx="12" cy="12" r="10" />
                                    <line x1="12" y1="16" x2="12" y2="12" />
                                    <line x1="12" y1="8" x2="12.01" y2="8" />
                                </svg>
                                <span>Details</span>
                            </a>
                        )}
                        <a
                            href={cert.pdfUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="view-btn"
                            title="View Certificate"
                        >
                            <svg
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                                <polyline points="14 2 14 8 20 8" />
                            </svg>
                            <span>View</span>
                        </a>
                    </div>
                </div>
            ))
        }
    </div>
</details>

<style>
    .certificate-group {
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .certificate-group:hover {
        border-color: rgba(255, 255, 255, 0.2);
    }

    .group-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.25rem 1.5rem;
        cursor: pointer;
        background: rgba(255, 255, 255, 0.02);
        transition: background 0.2s ease;
        list-style: none;
    }

    .group-header::-webkit-details-marker {
        display: none;
    }

    .group-header:hover {
        background: rgba(255, 255, 255, 0.05);
    }

    .group-title-container {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .provider-icon {
        flex-shrink: 0;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 6px;
        padding: 0.35rem;
    }

    .provider-icon img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .provider-name {
        margin: 0;
        font-size: 1.25rem;
        font-weight: 600;
        color: #ffffff;
        opacity: 0.9;
    }

    .cert-count {
        padding: 0.25rem 0.75rem;
        background: rgba(74, 158, 255, 0.15);
        color: #4a9eff;
        border-radius: 12px;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .chevron {
        transition: transform 0.3s ease;
        color: #aaa;
    }

    details[open] .chevron {
        transform: rotate(180deg);
    }

    .certificates-list {
        padding: 0.5rem;
    }

    .certificate-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        padding: 1rem 1rem;
        margin: 0.25rem 0;
        border-radius: 6px;
        transition: background 0.2s ease;
    }

    .certificate-item:hover {
        background: rgba(255, 255, 255, 0.03);
    }

    .cert-info {
        flex: 1;
    }

    .cert-title {
        margin: 0 0 0.25rem 0;
        font-size: 1rem;
        font-weight: 500;
        color: #ffffff;
        opacity: 0.95;
    }

    .cert-meta {
        display: flex;
        gap: 1rem;
        font-size: 0.875rem;
        color: #888;
    }

    .issuer {
        color: #aaa;
    }

    .cert-actions {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .info-btn,
    .view-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        text-decoration: none;
        transition: all 0.2s ease;
        white-space: nowrap;
        font-size: 0.875rem;
        border: 1px solid;
    }

    .info-btn {
        background: rgba(139, 92, 246, 0.1);
        border-color: rgba(139, 92, 246, 0.3);
        color: #a78bfa;
    }

    .info-btn:hover {
        background: rgba(139, 92, 246, 0.2);
        border-color: #a78bfa;
    }

    .view-btn {
        background: rgba(74, 158, 255, 0.1);
        border-color: rgba(74, 158, 255, 0.3);
        color: #4a9eff;
    }

    .view-btn:hover {
        background: rgba(74, 158, 255, 0.2);
        border-color: #4a9eff;
    }

    @media (max-width: 768px) {
        .certificate-item {
            flex-direction: column;
            align-items: flex-start;
        }

        .cert-actions {
            width: 100%;
            flex-direction: column;
        }

        .info-btn,
        .view-btn {
            width: 100%;
            justify-content: center;
        }

        .group-title-container {
            flex-wrap: wrap;
        }
    }
</style>
