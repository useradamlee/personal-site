---
const { items } = Astro.props;

// Categorize items by type
const categories = {
    competition: { label: "Competition", color: "#FFD700" },
    trip: { label: "School Trip", color: "#10B981" },
    course: { label: "Course", color: "#8B5CF6" },
    project: { label: "Project", color: "#4A9EFF" },
    activity: { label: "Activity", color: "#F59E0B" },
    achievement: { label: "Achievement", color: "#EF4444" },
};
---

<div class="timeline-container" id="timeline-container">
    <div class="timeline-header">
        <h2 class="timeline-title">My Journey</h2>
        <div class="timeline-legend">
            {
                Object.entries(categories).map(([key, cat]) => (
                    <div class="legend-item">
                        <span
                            class="legend-dot"
                            style={`background: ${cat.color};`}
                        />
                        <span class="legend-label">{cat.label}</span>
                    </div>
                ))
            }
        </div>
    </div>

    <div class="timeline">
        {
            items.map((item) => {
                const category =
                    categories[item.category] || categories.activity;
                const ItemTag = item.detailUrl ? "a" : "div";

                return (
                    <div class="timeline-item">
                        <div
                            class="timeline-marker"
                            style={`background: ${category.color}; box-shadow: 0 0 0 4px ${category.color}33;`}
                        />
                        <ItemTag
                            href={item.detailUrl}
                            class={`timeline-content ${item.detailUrl ? "timeline-content-clickable" : ""}`}
                            data-save-scroll={item.detailUrl ? "true" : "false"}
                        >
                            <div class="timeline-header-row">
                                <div class="timeline-date">{item.date}</div>
                                <span
                                    class="timeline-category-badge"
                                    style={`background: ${category.color}22; color: ${category.color};`}
                                >
                                    {category.label}
                                </span>
                            </div>
                            <h3 class="timeline-heading">{item.title}</h3>
                            <p class="timeline-description">
                                {item.description}
                            </p>
                            {item.highlights && (
                                <ul class="timeline-highlights">
                                    {item.highlights.map((highlight) => (
                                        <li>{highlight}</li>
                                    ))}
                                </ul>
                            )}
                            {item.tags && (
                                <div class="timeline-tags">
                                    {item.tags.map((tag) => (
                                        <span class="timeline-tag">{tag}</span>
                                    ))}
                                </div>
                            )}
                            {item.detailUrl && (
                                <div class="read-more">Read full story →</div>
                            )}
                        </ItemTag>
                    </div>
                );
            })
        }
    </div>
</div>

<script>
    // Save scroll position before navigating away
    function saveScrollPosition() {
        const scrollY = window.scrollY;
        sessionStorage.setItem("homeScrollPosition", scrollY.toString());
    }

    // Restore scroll position when returning to home
    function restoreScrollPosition() {
        const savedPosition = sessionStorage.getItem("homeScrollPosition");
        if (savedPosition && window.location.pathname === "/") {
            // Use requestAnimationFrame to ensure DOM is ready
            requestAnimationFrame(() => {
                window.scrollTo(0, parseInt(savedPosition, 10));
            });
        }
    }

    // Setup click handlers for timeline links
    function setupTimelineLinks() {
        const links = document.querySelectorAll('[data-save-scroll="true"]');
        links.forEach((link) => {
            link.addEventListener("click", saveScrollPosition);
        });
    }

    // Initialize on page load
    document.addEventListener("astro:page-load", () => {
        setupTimelineLinks();
        restoreScrollPosition();
    });

    // Cleanup on navigation
    document.addEventListener("astro:before-preparation", () => {
        // Save scroll if we're on the home page
        if (window.location.pathname === "/") {
            saveScrollPosition();
        }
    });
</script>

<style>
    .timeline-container {
        margin-top: 3rem;
        margin-bottom: 3rem;
    }

    .timeline-header {
        margin-bottom: 2rem;
    }

    .timeline-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #ffffff;
        opacity: 0.95;
        margin-bottom: 1rem;
    }

    .timeline-legend {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .legend-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .legend-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
    }

    .legend-label {
        font-size: 0.85rem;
        color: #888;
    }

    .timeline {
        position: relative;
        padding-left: 2rem;
    }

    .timeline::before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(
            to bottom,
            rgba(74, 158, 255, 0.5),
            rgba(74, 158, 255, 0.1)
        );
    }

    .timeline-item {
        position: relative;
        padding-bottom: 2rem;
        padding-left: 1.5rem;
    }

    .timeline-item:last-child {
        padding-bottom: 0;
    }

    .timeline-marker {
        position: absolute;
        left: -2.35rem;
        top: 0.5rem;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 3px solid rgba(20, 20, 30, 1);
        z-index: 1;
        transition: transform 0.3s ease;
    }

    .timeline-item:hover .timeline-marker {
        transform: scale(1.3);
    }

    .timeline-content {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 1.25rem;
        transition: all 0.3s ease;
        display: block;
    }

    .timeline-content-clickable {
        cursor: pointer;
        text-decoration: none;
    }

    .timeline-content-clickable:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(74, 158, 255, 0.4);
        transform: translateX(4px);
    }

    .timeline-header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .timeline-date {
        font-size: 0.875rem;
        color: #4a9eff;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .timeline-category-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .timeline-heading {
        font-size: 1.1rem;
        font-weight: 600;
        color: #ffffff;
        opacity: 0.95;
        margin: 0 0 0.5rem 0;
    }

    .timeline-description {
        font-size: 0.95rem;
        color: #aaa;
        line-height: 1.6;
        margin: 0 0 0.75rem 0;
    }

    .timeline-highlights {
        list-style: none;
        padding: 0;
        margin: 0 0 0.75rem 0;
    }

    .timeline-highlights li {
        font-size: 0.9rem;
        color: #999;
        padding-left: 1.25rem;
        position: relative;
        margin-bottom: 0.35rem;
        line-height: 1.5;
    }

    .timeline-highlights li::before {
        content: "▸";
        position: absolute;
        left: 0;
        color: #4a9eff;
    }

    .timeline-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .timeline-tag {
        padding: 0.25rem 0.75rem;
        background: rgba(74, 158, 255, 0.15);
        color: #4a9eff;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .read-more {
        color: #4a9eff;
        font-size: 0.9rem;
        font-weight: 600;
        margin-top: 0.5rem;
    }

    @media (max-width: 768px) {
        .timeline {
            padding-left: 1.5rem;
        }

        .timeline-item {
            padding-left: 1rem;
        }

        .timeline-marker {
            left: -1.85rem;
        }

        .timeline-legend {
            gap: 0.75rem;
        }

        .legend-label {
            font-size: 0.8rem;
        }
    }
</style>
