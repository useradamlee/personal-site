---
const { items } = Astro.props;

const categories = {
    competition: { label: "Competition", color: "#FFD700" },
    trip: { label: "School Trip", color: "#10B981" },
    course: { label: "Course", color: "#8B5CF6" },
    project: { label: "Project", color: "#4A9EFF" },
    activity: { label: "Activity", color: "#F59E0B" },
    achievement: { label: "Achievement", color: "#EF4444" },
};
---

<div class="timeline-container">
    <div class="timeline-header">
        <h2 class="timeline-title">My Journey</h2>
        <div class="timeline-legend">
            {
                Object.entries(categories).map(([key, cat]) => (
                    <div class="legend-item">
                        <span
                            class="legend-dot"
                            style={`--cat-color: ${cat.color}`}
                        />
                        <span class="legend-label">{cat.label}</span>
                    </div>
                ))
            }
        </div>
    </div>

    <div class="timeline">
        {
            items.map((item) => {
                const category =
                    categories[item.category] || categories.activity;
                const ItemTag = item.detailUrl ? "a" : "div";

                return (
                    <div
                        class="timeline-item"
                        style={`--cat-color: ${category.color}`}
                    >
                        <div class="timeline-marker" />
                        <ItemTag
                            href={item.detailUrl}
                            class={`timeline-content ${item.detailUrl ? "timeline-content-clickable" : ""}`}
                        >
                            <div class="timeline-header-row">
                                <div class="timeline-date">{item.date}</div>
                                <span class="timeline-category-badge">
                                    {category.label}
                                </span>
                            </div>
                            <h3 class="timeline-heading">{item.title}</h3>
                            <p class="timeline-description">
                                {item.description}
                            </p>
                            {item.highlights && (
                                <ul class="timeline-highlights">
                                    {item.highlights.map((highlight) => (
                                        <li>{highlight}</li>
                                    ))}
                                </ul>
                            )}
                            {item.tags && (
                                <div class="timeline-tags">
                                    {item.tags.map((tag) => (
                                        <span class="timeline-tag">{tag}</span>
                                    ))}
                                </div>
                            )}
                            {item.detailUrl && (
                                <div class="read-more">
                                    Read full story in blog →
                                </div>
                            )}
                        </ItemTag>
                    </div>
                );
            })
        }
    </div>
</div>

<style>
    .timeline-container {
        margin: 3rem 0;
    }

    .timeline-header {
        margin-bottom: 2rem;
    }

    .timeline-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #fff;
        opacity: 0.95;
        margin-bottom: 1rem;
    }

    .timeline-legend {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .legend-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .legend-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: var(--cat-color);
    }

    .legend-label {
        font-size: 0.85rem;
        color: #888;
    }

    .timeline {
        position: relative;
        padding-left: 2rem;
    }

    .timeline::before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(
            to bottom,
            rgba(74, 158, 255, 0.5),
            rgba(74, 158, 255, 0.1)
        );
    }

    .timeline-item {
        position: relative;
        padding-bottom: 2rem;
        padding-left: 1.5rem;
    }

    .timeline-item:last-child {
        padding-bottom: 0;
    }

    .timeline-marker {
        position: absolute;
        left: -2.35rem;
        top: 0.5rem;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: var(--cat-color);
        box-shadow: 0 0 0 4px
            color-mix(in srgb, var(--cat-color) 20%, transparent);
        border: 3px solid rgba(20, 20, 30, 1);
        z-index: 1;
        transition: transform 0.3s ease;
    }

    .timeline-item:hover .timeline-marker {
        transform: scale(1.3);
    }

    .timeline-content {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 1.25rem;
        transition: all 0.3s ease;
        display: block;
    }

    .timeline-content-clickable {
        cursor: pointer;
        text-decoration: none;
    }

    .timeline-content-clickable:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(74, 158, 255, 0.4);
        transform: translateX(4px);
    }

    .timeline-header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .timeline-date {
        font-size: 0.875rem;
        color: #4a9eff;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .timeline-category-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        background: color-mix(in srgb, var(--cat-color) 13%, transparent);
        color: var(--cat-color);
    }

    .timeline-heading {
        font-size: 1.1rem;
        font-weight: 600;
        color: #fff;
        opacity: 0.95;
        margin: 0 0 0.5rem;
    }

    .timeline-description {
        font-size: 0.95rem;
        color: #aaa;
        line-height: 1.6;
        margin: 0 0 0.75rem;
    }

    .timeline-highlights {
        list-style: none;
        padding: 0;
        margin: 0 0 0.75rem;
    }

    .timeline-highlights li {
        font-size: 0.9rem;
        color: #999;
        padding-left: 1.25rem;
        position: relative;
        margin-bottom: 0.35rem;
        line-height: 1.5;
    }

    .timeline-highlights li::before {
        content: "▸";
        position: absolute;
        left: 0;
        color: #4a9eff;
    }

    .timeline-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .timeline-tag {
        padding: 0.25rem 0.75rem;
        background: rgba(74, 158, 255, 0.15);
        color: #4a9eff;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .read-more {
        color: #4a9eff;
        font-size: 0.9rem;
        font-weight: 600;
        margin-top: 1rem;
    }

    @media (max-width: 768px) {
        .timeline {
            padding-left: 1.5rem;
        }
        .timeline-item {
            padding-left: 1rem;
        }
        .timeline-marker {
            left: -1.85rem;
        }
        .timeline-legend {
            gap: 0.75rem;
        }
        .legend-label {
            font-size: 0.8rem;
        }
    }
</style>
