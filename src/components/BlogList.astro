---
const { posts } = Astro.props;

const categories = {
    competition: { label: "Competition", color: "#FFD700" },
    "school trip": { label: "School Trip", color: "#10B981" },
    course: { label: "Course", color: "#8B5CF6" },
    project: { label: "Project", color: "#4A9EFF" },
    activity: { label: "Activity", color: "#F59E0B" },
    achievement: { label: "Achievement", color: "#EF4444" },
};

const sortedPosts = posts.sort((a, b) => {
    const dateA = new Date(a.frontmatter.date);
    const dateB = new Date(b.frontmatter.date);
    return dateB.getTime() - dateA.getTime();
});
---

<div class="blog-posts">
    {
        sortedPosts.map((post) => {
            const categoryKey = post.frontmatter.category?.toLowerCase() || "activity";
            const category = categories[categoryKey] || categories.activity;
            const slug = post.url;

            return (
                <a
                    href={slug}
                    class="blog-card"
                    style={`--cat-color: ${category.color}`}
                >
                    <div class="blog-card-header">
                        <span class="blog-category-badge">
                            {post.frontmatter.category}
                        </span>
                        <span class="blog-date">
                            {post.frontmatter.date}
                        </span>
                    </div>
                    <h3 class="blog-card-title">
                        {post.frontmatter.title}
                    </h3>
                    <p class="blog-card-description">
                        {post.frontmatter.description}
                    </p>
                    {post.frontmatter.tags && (
                        <div class="blog-tags">
                            {post.frontmatter.tags.map((tag: string) => (
                                <span class="blog-tag">{tag}</span>
                            ))}
                        </div>
                    )}
                    <div class="read-more">Read full article â†’</div>
                </a>
            );
        })
    }
</div>

<style>
    .blog-posts {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .blog-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 1.5rem;
        text-decoration: none;
        transition: all 0.3s ease;
        display: block;
    }

    .blog-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(74, 158, 255, 0.4);
        transform: translateX(4px);
    }

    .blog-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .blog-category-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        background: color-mix(in srgb, var(--cat-color) 13%, transparent);
        color: var(--cat-color);
    }

    .blog-date {
        font-size: 0.875rem;
        color: #4a9eff;
        font-weight: 600;
    }

    .blog-card-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #fff;
        margin: 0 0 0.75rem 0;
        line-height: 1.3;
    }

    .blog-card-description {
        font-size: 0.95rem;
        color: #aaa;
        line-height: 1.6;
        margin: 0 0 1rem 0;
    }

    .blog-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
    }

    .blog-tag {
        padding: 0.25rem 0.75rem;
        background: rgba(74, 158, 255, 0.15);
        color: #4a9eff;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .read-more {
        color: #4a9eff;
        font-size: 0.9rem;
        font-weight: 600;
        margin-top: 0.5rem;
    }

    @media (max-width: 768px) {
        .blog-card-title {
            font-size: 1.1rem;
        }
    }
</style>
