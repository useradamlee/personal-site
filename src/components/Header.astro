---
import { ViewTransitions } from "astro:transitions";
interface HeaderProps {
    title: string;
}
const { title } = Astro.props as HeaderProps;
---

<head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:title" content={title} />
    <meta property="twitter:title" content={title} />

    <ViewTransitions />

    <!-- Preload critical CSS -->
    <link rel="preload" href="/assets/styles.css" as="style" />
    <link rel="stylesheet" href="/assets/styles.css" />

    <!-- Only keep if you use Google Fonts, otherwise remove -->
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin /> -->

    <script is:inline>
        !(function (o, c) {
            var n = c.documentElement,
                t = " w-mod-";
            ((n.className += t + "js"),
                ("ontouchstart" in o ||
                    (o.DocumentTouch && c instanceof DocumentTouch)) &&
                    (n.className += t + "touch"));
        })(window, document);
    </script>

    <!-- Uncomment if you want favicons -->
    <!-- <link href="/assets/favicon-32x32.png" rel="shortcut icon" type="image/x-icon" />
    <link href="/assets/favicon-32x32.png" rel="apple-touch-icon" /> -->
</head>
